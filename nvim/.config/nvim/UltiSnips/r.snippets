snippet af "anonymous function" w
$1 <- function(${2:x}) $0
endsnippet

snippet f "function" b
$1 <- function(${2:x}) {
	$3
}
$0
endsnippet

snippet if "if statement" w
if ($1) {
	$2
} $0
endsnippet

snippet ei "else if statement" w
else if ($1) {
	$2
} $0
endsnippet

snippet el "else statement" w
else {
	$1
} $0
endsnippet
